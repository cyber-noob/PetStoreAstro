<style>
  .grid-parent {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    grid-gap: 10px;
    width: 100%;
    padding: 2%;
  }
  .grid-child {
    margin: 10px;
    padding: 2%;
  }
</style>
