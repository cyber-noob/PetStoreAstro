---
interface Props {
  items: Array<string>;
}

const { items } = Astro.props;
console.log("items -> ", items);
---

<div id="default-carousel" class="carousel-parent" data-carousel="slide">
  <!-- Carousel wrapper -->
  <div class="carousel-wrapper">
    {
      items.map((item) => (
        <div class="hidden duration-700 ease-in-out" data-carousel-item>
          <img
            src={item}
            class="absolute block w-full -translate-x-1/2 -translate-y-1/2 top-1/2 left-1/2"
            alt="..."
          />
        </div>
      ))
    }

      <!-- Slider indicators -->
  <div class="slide-indicator">
    {
      items.map((index, item) => (
        <button
          type="button"
          class="w-3 h-3 rounded-full"
          aria-current="true"
          aria-label="Slide 1"
          data-carousel-slide-to={index}
        />
      ))
    }
  </div>
  <!-- Slider controls -->
  <button type="button" class="slide-controlleft" data-carousel-prev>
    <span
      class="inline-flex float-left items-center justify-center w-10 h-10 rounded-full bg-white/30 dark:bg-gray-800/30 group-hover:bg-white/50 dark:group-hover:bg-gray-800/60 group-focus:ring-4 group-focus:ring-white dark:group-focus:ring-gray-800/70 group-focus:outline-none"
    >
      <svg
        class="w-4 h-4 text-white dark:text-gray-800 rtl:rotate-180"
        aria-hidden="true"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 6 10"
      >
        <path
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M5 1 1 5l4 4"></path>
      </svg>
      <span class="sr-only">Previous</span>
    </span>
  </button>
  <button type="button" class="slide-controlright" data-carousel-next>
    <span
      class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-white/30 dark:bg-gray-800/30 group-hover:bg-white/50 dark:group-hover:bg-gray-800/60 group-focus:ring-4 group-focus:ring-white dark:group-focus:ring-gray-800/70 group-focus:outline-none"
    >
      <svg
        class="w-4 h-4 text-white dark:text-gray-800 rtl:rotate-180"
        aria-hidden="true"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 6 10"
      >
        <path
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="m1 9 4-4-4-4"></path>
      </svg>
      <span class="sr-only">Next</span>
    </span>
  </button>
  </div>
</div>

<style>
  .carousel-parent {
    position: relative;
    width: 100%;
  }

  .carousel-wrapper {
    position: relative;
    display: flex;
    height: 400px;
    border-radius: 10px;
    overflow: hidden;
    top: 0;
    left: 0;
    box-sizing: border-box;
  }

  .slide-indicator {
    position: absolute;
    z-index: 20;
    margin-left: 50%;
    bottom: 0;
    padding-bottom: 3%;
  }

  .slide-controlleft {
    position: absolute;
    z-index: 30;
    bottom: 50%;
    padding-left: 3%;
  }

  .slide-controlright {
    position: absolute;
    z-index: 30;
    bottom: 50%;
    left: 90%;
  }
</style>
