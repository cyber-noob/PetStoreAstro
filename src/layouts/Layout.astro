---
import SearchBar from "../components/SearchBar.astro";
import SentimentSatisfiedAltOutlinedIcon from "@mui/icons-material/SentimentSatisfiedAltOutlined";
import FavoriteBorderOutlinedIcon from "@mui/icons-material/FavoriteBorderOutlined";
import ShoppingBagOutlinedIcon from "@mui/icons-material/ShoppingBagOutlined";
import Chip from "@mui/material/Chip/Chip";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title id="c_tity">{title}</title>

    <!-- Flowbite components -->
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.8.1/flowbite.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" type="text/css" href="css/grid-gallery.css" />
    <!-- <link rel="stylesheet" type="text/css" href="css/grid-gallery.min.css" /> -->
  </head>
  <body>
    <!-- Common top navbar -->
    <div class="main">
      <div class="logo">
        <img src="/doggo.gif" class="gif" />
        <a class="title">Petsy.INC</a>
      </div>

      <div class="items">
        <div id="exists" class="exists" onclick="location.href = '/plp'">
          Puppies

          <div id="highlighter" class="highlighter"></div>
        </div>

        <div>
          Birds
          <div class="chips">
            <Chip
              label="coming soon"
              size="small"
              variant="outlined"
              color="error"
            />
          </div>
        </div>

        <div>
          Fishes
          <div class="chips">
            <Chip
              label="coming soon"
              size="small"
              variant="outlined"
              color="error"
            />
          </div>
        </div>
        <div>
          Exotics
          <div class="chips">
            <Chip
              label="coming soon"
              size="small"
              variant="outlined"
              color="error"
            />
          </div>
        </div>
      </div>

      <div class="account-icons">
        <div>
          <SentimentSatisfiedAltOutlinedIcon color="primary" />
          <div class="icon-defs">PROFILE</div>
        </div>
        <div>
          <FavoriteBorderOutlinedIcon color="primary" />
          <div class="icon-defs">WISHLIST</div>
        </div>
        <div>
          <ShoppingBagOutlinedIcon color="primary" />
          <div class="icon-defs">CART</div>
        </div>
      </div>
    </div>

    <SearchBar />

    <slot />

    <!-- Flowbite component library -->
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.8.1/flowbite.min.js"
    ></script>

    <script type="text/javascript" src="js/grid-gallery.js"></script>
    <!-- <script type="text/javascript" src="js/grid-gallery.min.js"></script> -->
  </body>

  <style is:global>
    :root {
      --accent: 136, 58, 234;
      --accent-light: 224, 204, 250;
      --accent-dark: 49, 10, 101;
      --accent-gradient: linear-gradient(
        45deg,
        rgb(var(--accent)),
        rgb(var(--accent-light)) 30%,
        rgb(0, 0, 0) 60%
      );
    }
    html {
      font-family: system-ui, sans-serif;
      background: #ffffff;
      background-size: 100%;
    }

    body {
      width: 100%;
      height: 100%;
    }
    code {
      font-family:
        Menlo,
        Monaco,
        Lucida Console,
        Liberation Mono,
        DejaVu Sans Mono,
        Bitstream Vera Sans Mono,
        Courier New,
        monospace;
    }

    .title {
      font: Courier;
      font-size: x-large;
      font-weight: bold;
      font-style: italic;
      align-self: center;
      color: rgb(0, 118, 227);
    }

    .gif {
      display: flex;
      width: 20%;
      height: auto;
      float: left;
      padding-right: 3%;
    }

    .main {
      display: flex;
      flex-direction: row;
      justify-content: space-between;
      align-items: center;
      flex: 0 0 auto;
      overflow: hidden;
    }

    .logo {
      display: flex;
      max-width: 25%;
    }

    .logo > img {
      flex: 1;
      max-height: 150px;
    }

    .items {
      display: flex;
      width: 50%;
      flex-direction: row;
      justify-content: space-between;
    }

    .items > .exists {
      /* display: flex; */
      font: Courier;
      font-size: medium;
      font-weight: bold;
      color: rgb(0, 0, 0);
    }

    .items > * {
      /* display: flex; */
      font: Courier;
      font-size: medium;
      font-weight: bold;
      color: rgb(183, 183, 183);
    }

    .highlighter {
      width: auto;
      height: 5px;
      background-color: rgb(0, 94, 255);
      margin-top: 10px;
      display: none;
    }

    .account-icons {
      display: flex;
      width: 15%;
      flex-direction: row;
      justify-content: space-between;
      margin-right: 2%;
    }

    .account-icons > div {
      display: flex;
      flex-direction: column;
      align-items: center;
      align-self: center;
      align-content: center;
      justify-content: center;
      justify-self: center;
      justify-items: center;
    }

    .icon-defs {
      font: Courier;
      font-size: x-small;
      font-weight: bold;
      color: rgb(0, 0, 0);
      margin-top: 10%;
    }

    .chips {
      height: auto;
      margin-top: -50px;
      margin-left: 30px;
    }
  </style>

  <script>
    if (window.location.href.includes("/plp")) {
      window.onload = function () {
        document.getElementById("exists").style.color = "rgb(0, 136, 255)";
        document.getElementById("highlighter").style.display = "block";
      };
    }
  </script>
</html>
